<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false" packagingData="true">
    <contextName>cas</contextName>
    <property name="logDir" value="../webapps/cas/WEB-INF/logs" />
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %X{userName} - %X{sessionId} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <file>${logDir}/cas_current.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
	    	<fileNamePattern>${logDir}/cas_%d{yyyy-MM-dd}.log.zip</fileNamePattern>  
	    </rollingPolicy>
        <encoder>
          <pattern>%d{yyyy-MM-dd HH:mm:ss}[%-5level][%thread]%logger{36} - %X{userName} - %X{sessionId} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>